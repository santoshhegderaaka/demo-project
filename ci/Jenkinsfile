pipeline {
    agent any

    environment {
        CI = "true"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
            }
        }

        stage('Generate Unit Tests using AI Copilot') {
            when {
                expression { fileExists('scripts/generate-spec-tests.sh') }
            }
            steps {
                sh './scripts/generate-spec-tests.sh'
            }
        }

        stage('Run Tests & Coverage') {
            steps {
                sh 'npm test -- --coverage'
            }
        }

        stage('Publish Reports') {
            steps {
                junit allowEmptyResults: true, testResults: '**/junit*.xml'

                publishHTML([
                    reportName: 'Jest Coverage Report',
                    reportDir: 'coverage/lcov-report',
                    reportFiles: 'index.html',
                    keepAll: true,
                    alwaysLinkToLastBuild: true,
                    allowMissing: true
                ])
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo 'Build successful'
        }
        failure {
            echo 'Build failed'
        }
    }
}
